        "file":{
            "adapter": "debugpy",
            "configuration": {
                "name": "run the executable",
                "type": "python",
                "request": "launch",
                "python": "${workspaceFolder}/venv/bin/python3",
                "program": "${file}"
            },
            "breakpoints": {
                "exception": {
                  "raised": "N",
