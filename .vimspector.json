                "name": "run the executable",
                "type": "python",
                "request": "launch",
                "python": "${workspaceFolder}/venv/bin/python",
                "program": "manage.py",
                "args": [
                    "runserver"
                ]
            },
            "breakpoints": {
                "exception": {
                  "raised": "N",
                  "caught": "N",
                  "uncaught": "Y",
                  "userUnhandled": "N"
                }
            }
