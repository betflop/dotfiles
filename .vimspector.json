        "test":{
            "adapter": "debugpy",
            "configuration": {
                "name": "run the test",
                "module": "pytest",
                "type": "python",
                "request": "launch",
                "python.pythonPath": "/usr/bin/python3",
                "args": [
                  "-q",
                  "${file}"
